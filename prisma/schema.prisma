generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Class {
  id            Int            @id @default(autoincrement())
  code          String         @unique
  name          String
  department    Department     @relation(fields: [departmentId], references: [id])
  departmentId  Int
  distributions Distribution[]
  reviews        Review[]
}

model Instructor {
  id            Int            @id @default(autoincrement())
  name          String
  department    String
  distributions Distribution[]
  reviews        Review[]
}

model Department {
  id      Int     @id @default(autoincrement())
  code    String  @unique
  name    String
  classes Class[]
  reviews Review[]
}

model Distribution {
  id               Int         @id @default(autoincrement())
  class            Class       @relation(fields: [classId], references: [id])
  classId          Int
  instructor       Instructor? @relation(fields: [instructorId], references: [id])
  instructorId     Int?
  term             String
  studentHeadcount Int
  avgCourseGrade   Float
  grades           Json
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  reviews   Review[]
}

model Review {
  id            Int         @id @default(autoincrement())
  title         String?
  rating        Int
  content       String
  courseCode    String
  isOnlineCourse Boolean   @default(false)
  difficulty    Int?
  wouldTakeAgain Boolean?
  attendanceMandatory Boolean?
  grade         String?
  tags          String[]   @default([])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  class         Class       @relation(fields: [classId], references: [id])
  classId       Int
  instructor    Instructor  @relation(fields: [instructorId], references: [id])
  instructorId  Int
  department    Department  @relation(fields: [departmentId], references: [id])
  departmentId  Int
  user          User        @relation(fields: [userId], references: [id])
  userId        Int

  @@index([classId])
  @@index([instructorId])
  @@index([departmentId])
  @@index([userId])
}
